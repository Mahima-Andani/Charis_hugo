.products{background:linear-gradient(#9b8055,rgba(247,247,247,.9));display:grid;grid-template-columns:1fr 1fr}.products .product__box{display:flex;flex-direction:column;align-items:center;justify-content:center;margin:10%;padding:2rem;background-color:rgba(0,0,0,.1);height:90%}.products .product__box:hover{background-color:rgba(0,0,0,.5)}.products .product__button-container{width:100%}.products .product__button-container .product__price{text-align:center;font-size:22px}.products .product__button-container .buy-button{width:90%;margin:5%;padding:.5rem;font-size:120%;border:none;color:#fff;background-color:#ff9f00;cursor:pointer}@media screen and (min-width:600px){.products{display:grid;grid-template-columns:1fr 1fr 1fr 1fr}}